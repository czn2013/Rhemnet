<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/invite_a_friend_telephone_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/view_margin_border"
        android:layout_centerInParent="true"

        >
        <TextView
            style="@style/InputTextViewStyle"
            android:text="TEL NUMBER FRIEND"/>
        <EditText

            style="@style/InputEditTextStyle"
            android:drawableLeft="@drawable/invite_a_friend_phone_icon"
            android:hint="Enter number"
            android:layout_gravity="center"
            android:layout_margin="@dimen/input_field_margin"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INVITE"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_login_button_text_size"
            android:background="@drawable/invite_a_friend_invite_btn"
            android:layout_gravity="center"
            />


    </LinearLayout>

</RelativeLayout>