<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/invite_a_friend_email_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <TextView

            style="@style/InputTextViewStyle"
            android:text="EMAIL FRIEND"
            />
        <EditText
            style="@style/InputEditTextStyle"
            android:drawableLeft="@drawable/invite_a_friend_mail_icon"
            android:hint="email friend"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/input_field_margin"
            android:layout_marginBottom="@dimen/input_field_margin"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INVITE"
            style= "@style/InputButtonStyle"
            android:background="@drawable/invite_a_friend_invite_btn"
            />


    </LinearLayout>



</RelativeLayout>