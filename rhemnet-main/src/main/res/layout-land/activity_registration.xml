<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/image_login_background"
        tools:context=".ui.activity.RegistrationActivity"
        >

    <ImageView
            android:id="@+id/image_logo"
            android:layout_width="@dimen/logo_width"
            android:layout_height="@dimen/logo_height"
            android:src="@drawable/image_logo"
            android:layout_marginLeft="5dp"
            />

    <TextView
            android:id="@+id/text_register_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_text_register_form"
            android:layout_below="@id/image_logo"
            android:layout_alignLeft="@id/image_logo"
            android:textSize="17sp"
            android:textColor="@color/text_lilac"
            android:layout_marginTop="@dimen/activity_registration_register_text_size"
            />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_register_form"
            android:layout_marginTop="@dimen/activity_registration_scroll_margin_top"
            android:layout_marginLeft="@dimen/activity_registration_form_side_margin"
            android:layout_marginRight="@dimen/activity_registration_form_side_margin"
            >

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginTop="@dimen/activity_registration_form_margin_top"
                >

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:paddingLeft="@dimen/activity_registration_part_padding_left"
                          android:paddingRight="@dimen/activity_registration_part_padding_right"
                          android:layout_weight="1"
                    >

                <FrameLayout android:layout_width="match_parent"
                             android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/text_username"
                            android:text="@string/register_text_user_name"
                            style="@style/TextFieldRegistrationActivity"
                            />

                    <EditText
                            android:id="@+id/edit_username"
                            style="@style/EditRegistrationActivity"
                            />
                </FrameLayout>

                <FrameLayout android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_marginTop="@dimen/activity_registration_field_margin_top"
                        >

                    <TextView
                            android:id="@+id/text_password"
                            android:text="@string/register_text_password"
                            style="@style/TextFieldRegistrationActivity"
                            />

                    <EditText
                            android:id="@+id/edit_password"
                            android:inputType="textPassword"
                            style="@style/EditRegistrationActivity"
                            />
                </FrameLayout>

                <FrameLayout android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_marginTop="@dimen/activity_registration_field_margin_top"
                        >

                    <TextView
                            android:id="@+id/text_repeat_password"
                            android:text="@string/register_text_repeat_password"
                            style="@style/TextFieldRegistrationActivity"
                            />

                    <EditText
                            android:id="@+id/edit_repeat_password"
                            android:inputType="textPassword"
                            style="@style/EditRegistrationActivity"
                            />
                </FrameLayout>

                <FrameLayout android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_marginTop="@dimen/activity_registration_field_margin_top"
                        >

                    <TextView
                            android:id="@+id/text_email"
                            android:text="@string/register_text_email"
                            style="@style/TextFieldRegistrationActivity"
                            />

                    <EditText
                            android:id="@+id/edit_email"
                            android:inputType="textEmailAddress"
                            style="@style/EditRegistrationActivity"
                            />
                </FrameLayout>

                <FrameLayout android:layout_width="wrap_content"
                             android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/text_accept_terms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/register_text_accept_terms"
                            android:textColor="@color/text_lilac"
                            android:layout_marginTop="10dp"
                            android:textSize="15sp"
                            android:layout_gravity="center_vertical"
                            />

                    <CheckBox android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="200dp"/>
                </FrameLayout>


            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_weight="1"
                          android:paddingLeft="@dimen/activity_registration_part_padding_left"
                          android:paddingRight="@dimen/activity_registration_part_padding_right"
                    >

                <FrameLayout android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                        >

                    <TextView
                            android:id="@+id/text_name"
                            android:text="@string/register_text_name"
                            style="@style/TextFieldRegistrationActivity"
                            />

                    <EditText
                            android:id="@+id/edit_name"
                            style="@style/EditRegistrationActivity"
                            />
                </FrameLayout>

                <FrameLayout android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_marginTop="@dimen/activity_registration_field_margin_top"
                        >

                    <TextView
                            android:id="@+id/text_second_name"
                            android:text="@string/register_text_second_name"
                            style="@style/TextFieldRegistrationActivity"
                            />

                    <EditText
                            android:id="@+id/edit_second_name"
                            style="@style/EditRegistrationActivity"
                            />
                </FrameLayout>

                <FrameLayout android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_marginTop="@dimen/activity_registration_field_margin_top"
                        >

                    <TextView
                            android:id="@+id/text_address"
                            android:text="@string/register_text_address"
                            style="@style/TextFieldRegistrationActivity"
                            />

                    <EditText
                            android:id="@+id/edit_address"
                            style="@style/EditRegistrationActivity"
                            />
                </FrameLayout>

                <FrameLayout android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_marginTop="@dimen/activity_registration_field_margin_top"
                        >

                    <TextView
                            android:id="@+id/text_phone"
                            android:text="@string/register_text_phone"
                            style="@style/TextFieldRegistrationActivity"
                            />

                    <EditText
                            android:id="@+id/edit_phone"
                            android:inputType="phone"
                            style="@style/EditRegistrationActivity"
                            />
                </FrameLayout>

                <Button
                        android:id="@+id/button_send"
                        android:layout_width="@dimen/activity_registration_send_button_width"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_button_login"
                        android:text="@string/register_text_send"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/activity_registration_send_button_text_size"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/activity_registration_send_button_margin_top"
                        />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>