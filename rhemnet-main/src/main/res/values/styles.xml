<resources>

    <style name="EditLoginActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/activity_login_field_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_login_field_margin</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">@dimen/activity_login_edit_text_size</item>
    </style>

    <style name="TextItemHomeActivity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/activity_home_item_text_margin_left</item>
        <item name="android:textColor">@color/text_lilac</item>
        <item name="android:textSize">@dimen/activity_home_item_text_size</item>
        <item name="android:layout_gravity">center_vertical</item>

    </style>

    <style name="EditRegistrationActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">150dp</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:background">@drawable/background_edit</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextFieldRegistrationActivity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:textColor">@color/text_lilac</item>
        <item name="android:textSize">@dimen/activity_registration_field_text_size</item>

    </style>

    <style name="ButtonHomeActivity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>

    <style name="MenuTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name= "android:padding">4dp</item>
    </style>

    <style name="TitleTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name= "android:padding">@dimen/view_padding</item>
    </style>

    <style name="ListItemTextStyle">
        <item name="android:layout_marginLeft">@dimen/view_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="InputEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/view_margin_border</item>
        <item name="android:layout_marginRight">@dimen/view_margin_border</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">@dimen/activity_login_edit_text_size</item>
        <item name="android:background">@drawable/background_edit</item>
    </style>

    <style name="InputTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/input_textview_textsize</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="InputButtonStyle">
        <item name="android:textSize">@dimen/activity_login_button_text_size</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
